# A sample Makefile for building Google Test and using it in user
# tests.  Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# Please tweak the following variable definitions as needed by your
# project, except GTEST_HEADERS, which you can use in your own targets
# but shouldn't modify.

# Points to the root of Google Test, relative to where this file is.
# Remember to tweak this if you move this file.
GTEST_DIR = /home/arin/Desktop/googletest/ridge/googletest

# Where to find user code.
BASE_DIR = /home/arin/Desktop/Ridge/cpp

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include

# Flags passed to the C++ compiler.
CXXFLAGS += -std=c++11 -g -Wall -Wextra -pthread

SDL_LINKER_FLAGS = -lSDL2 -lSDL2_image -lSDL2_ttf -lSDL2_mixer

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = $(BUILD_DIR)/base_tile_unittest \
        $(BUILD_DIR)/base_unit_unittest \
        $(BUILD_DIR)/constants_unittest \
        $(BUILD_DIR)/map_unittest \
        $(BUILD_DIR)/sub_tile_unittest \
        $(BUILD_DIR)/sub_unit_unittest

PROGRAM = Ridge

# All Google Test headers.  Usually you shouldn't change this
# definition.
GTEST_HEADERS = $(GTEST_DIR)/include/gtest/*.h \
                $(GTEST_DIR)/include/gtest/internal/*.h

BUILD_DIR = $(BASE_DIR)/build
# House-keeping build targets.

all : $(PROGRAM) $(TESTS)

clean :
	rm build/*
	rm Ridge

# Builds gtest.a and gtest_main.a.

# Usually you shouldn't tweak such internal variables, indicated by a
# trailing _.
GTEST_SRCS_ = $(GTEST_DIR)/src/*.cc $(GTEST_DIR)/src/*.h $(GTEST_HEADERS)

# For simplicity and to avoid depending on Google Test's
# implementation details, the dependencies specified below are
# conservative and not optimized.  This is fine as Google Test
# compiles fast and for ordinary users its source rarely changes.
$(BUILD_DIR)/gtest-all.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest-all.cc -o \
            $(BUILD_DIR)/gtest-all.o

$(BUILD_DIR)/gtest_main.o : $(GTEST_SRCS_)
	$(CXX) $(CPPFLAGS) -I$(GTEST_DIR) $(CXXFLAGS) -c \
            $(GTEST_DIR)/src/gtest_main.cc -o \
            $(BUILD_DIR)/gtest_main.o

$(BUILD_DIR)/gtest.a : $(BUILD_DIR)/gtest-all.o
	$(AR) $(ARFLAGS) $@ $^ -o $(BUILD_DIR)/gtest.a

$(BUILD_DIR)/gtest_main.a : $(BUILD_DIR)/gtest-all.o $(BUILD_DIR)/gtest_main.o
	$(AR) $(ARFLAGS) $@ $^ -o $(BUILD_DIR)/gtest_main.a

# Builds a sample test.  A test should link with either gtest.a or
# gtest_main.a, depending on whether it defines its own main()
# function.
SRC_DIR = $(BASE_DIR)/src
MODELS_DIR = $(BASE_DIR)/src/models
CONTROLLER_DIR = $(BASE_DIR)/src/controller
VIEW_DIR = $(BASE_DIR)/src/view
TILE_DIR = $(BASE_DIR)/src/models/tiles
UNIT_DIR = $(BASE_DIR)/src/models/units
TEST_DIR = $(BASE_DIR)/tests

CPPFLAGS += -I$(MODELS_DIR)
CPPFLAGS += -I$(CONTROLLER_DIR)
CPPFLAGS += -I$(BUILD_DIR)
CPPFLAGS += -I$(TILE_DIR)
CPPFLAGS += -I$(UNIT_DIR)
CPPFLAGS += -I$(TEST_DIR)
CPPFLAGS += -I$(VIEW_DIR)
CPPFLAGS += -I$(SRC_DIR)

$(BUILD_DIR)/mvc.o : $(SRC_DIR)/mvc.h \
                     $(SRC_DIR)/mvc.cpp \
                     $(BUILD_DIR)/game_state.o \
                     $(BUILD_DIR)/sdl.o \
                     $(BUILD_DIR)/texture_manager.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SDL_LINKER_FLAGS) -c $(SRC_DIR)/mvc.cpp -o $(BUILD_DIR)/mvc.o

# Controller 

$(BUILD_DIR)/controller.o : $(CONTROLLER_DIR)/controller.h \
                            $(CONTROLLER_DIR)/controller.cpp \
                            $(BUILD_DIR)/sdl.o \
                            $(BUILD_DIR)/game_state.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SDL_LINKER_FLAGS) -c $(CONTROLLER_DIR)/controller.cpp -o $(BUILD_DIR)/controller.o


# View

$(BUILD_DIR)/base_texture.o : $(VIEW_DIR)/base_texture.h \
                              $(VIEW_DIR)/base_texture.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SDL_LINKER_FLAGS) -c $(VIEW_DIR)/base_texture.cpp -o $(BUILD_DIR)/base_texture.o

$(BUILD_DIR)/texture_manager.o :  $(VIEW_DIR)/texture_manager.h \
                                  $(VIEW_DIR)/texture_manager.cpp \
                                  $(BUILD_DIR)/base_texture.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SDL_LINKER_FLAGS) -c $(VIEW_DIR)/texture_manager.cpp -o $(BUILD_DIR)/texture_manager.o

$(BUILD_DIR)/init_error.o : $(VIEW_DIR)/init_error.h \
                              $(VIEW_DIR)/init_error.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SDL_LINKER_FLAGS) -c $(VIEW_DIR)/init_error.cpp -o $(BUILD_DIR)/init_error.o

$(BUILD_DIR)/window.o : $(VIEW_DIR)/window.h \
                        $(VIEW_DIR)/window.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SDL_LINKER_FLAGS) -c $(VIEW_DIR)/window.cpp -o $(BUILD_DIR)/window.o

$(BUILD_DIR)/sdl.o : $(VIEW_DIR)/sdl.h \
                     $(VIEW_DIR)/sdl.cpp \
                     $(BUILD_DIR)/window.o \
                     $(BUILD_DIR)/texture_manager.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(SDL_LINKER_FLAGS) -c $(VIEW_DIR)/sdl.cpp -o $(BUILD_DIR)/sdl.o

# Models

$(BUILD_DIR)/utils.o : $(MODELS_DIR)/utils.h \
          $(MODELS_DIR)/utils.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(MODELS_DIR)/utils.cpp -o $(BUILD_DIR)/utils.o

$(BUILD_DIR)/constants.o : $(MODELS_DIR)/constants.h \
              $(MODELS_DIR)/constants.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(MODELS_DIR)/constants.cpp -o $(BUILD_DIR)/constants.o

$(BUILD_DIR)/base_unit.o : $(UNIT_DIR)/base_unit.h \
              $(UNIT_DIR)/base_unit.cpp \
              $(BUILD_DIR)/texture_manager.o \
              $(BUILD_DIR)/constants.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNIT_DIR)/base_unit.cpp -o $(BUILD_DIR)/base_unit.o

$(BUILD_DIR)/greaser_unit.o : $(UNIT_DIR)/greaser_unit.h \
                 $(UNIT_DIR)/greaser_unit.cpp \
                 $(BUILD_DIR)/base_unit.o \
                 $(BUILD_DIR)/utils.o \
                 $(BUILD_DIR)/constants.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNIT_DIR)/greaser_unit.cpp -o $(BUILD_DIR)/greaser_unit.o
              
$(BUILD_DIR)/squabbler_unit.o : $(UNIT_DIR)/squabbler_unit.h \
                 $(UNIT_DIR)/squabbler_unit.cpp \
                 $(BUILD_DIR)/base_unit.o \
                 $(BUILD_DIR)/utils.o \
                 $(BUILD_DIR)/constants.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNIT_DIR)/squabbler_unit.cpp -o $(BUILD_DIR)/squabbler_unit.o
              
$(BUILD_DIR)/bruiser_unit.o : $(UNIT_DIR)/bruiser_unit.h \
                 $(UNIT_DIR)/bruiser_unit.cpp \
                 $(BUILD_DIR)/base_unit.o \
                 $(BUILD_DIR)/utils.o \
                 $(BUILD_DIR)/constants.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(UNIT_DIR)/bruiser_unit.cpp -o $(BUILD_DIR)/bruiser_unit.o
              
$(BUILD_DIR)/base_tile.o : $(TILE_DIR)/base_tile.h \
              $(TILE_DIR)/base_tile.cpp \
              $(BUILD_DIR)/base_unit.o \
              $(BUILD_DIR)/base_texture.o \
              $(BUILD_DIR)/texture_manager.o 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TILE_DIR)/base_tile.cpp -o $(BUILD_DIR)/base_tile.o

$(BUILD_DIR)/sub_tile.o : $(TILE_DIR)/sub_tile.h \
             $(TILE_DIR)/sub_tile.cpp \
             $(BUILD_DIR)/base_tile.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TILE_DIR)/sub_tile.cpp -o $(BUILD_DIR)/sub_tile.o

$(BUILD_DIR)/cursor.o : $(MODELS_DIR)/cursor.h \
        $(MODELS_DIR)/cursor.cpp \
        $(BUILD_DIR)/constants.o \
        $(BUILD_DIR)/base_texture.o \
        $(BUILD_DIR)/texture_manager.o 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(MODELS_DIR)/cursor.cpp -o $(BUILD_DIR)/cursor.o

$(BUILD_DIR)/map.o : $(MODELS_DIR)/map.h \
        $(MODELS_DIR)/map.cpp \
        $(BUILD_DIR)/constants.o \
        $(BUILD_DIR)/base_tile.o \
        $(BUILD_DIR)/base_unit.o \
        $(BUILD_DIR)/texture_manager.o 
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(MODELS_DIR)/map.cpp -o $(BUILD_DIR)/map.o

$(BUILD_DIR)/game_state.o : $(MODELS_DIR)/game_state.h \
        $(MODELS_DIR)/game_state.cpp \
        $(BUILD_DIR)/map.o \
        $(BUILD_DIR)/cursor.o \
        $(BUILD_DIR)/constants.o \
        $(BUILD_DIR)/base_tile.o \
        $(BUILD_DIR)/base_unit.o \
        $(BUILD_DIR)/greaser_unit.o \
        $(BUILD_DIR)/bruiser_unit.o \
        $(BUILD_DIR)/squabbler_unit.o \
        $(BUILD_DIR)/texture_manager.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(MODELS_DIR)/game_state.cpp -o $(BUILD_DIR)/game_state.o

# Testing

$(BUILD_DIR)/base_tile_unittest.o : $(TEST_DIR)/base_tile_unittest.cpp \
                       $(BUILD_DIR)/base_tile.o \
                       $(BUILD_DIR)/constants.o \
                       $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TEST_DIR)/base_tile_unittest.cpp -o $(BUILD_DIR)/base_tile_unittest.o

$(BUILD_DIR)/sub_tile_unittest.o : $(TEST_DIR)/sub_tile_unittest.cpp \
                      $(TILE_DIR)/sub_tile.h \
                      $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TEST_DIR)/sub_tile_unittest.cpp -o $(BUILD_DIR)/sub_tile_unittest.o

$(BUILD_DIR)/base_unit_unittest.o : $(TEST_DIR)/base_unit_unittest.cpp \
                       $(BUILD_DIR)/base_unit.o \
                       $(BUILD_DIR)/constants.o \
                       $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TEST_DIR)/base_unit_unittest.cpp -o $(BUILD_DIR)/base_unit_unittest.o

$(BUILD_DIR)/sub_unit_unittest.o : $(TEST_DIR)/sub_unit_unittest.cpp \
                      $(BUILD_DIR)/base_unit.o \
                      $(BUILD_DIR)/greaser_unit.o \
                      $(BUILD_DIR)/squabbler_unit.o \
                      $(BUILD_DIR)/bruiser_unit.o \
                      $(BUILD_DIR)/constants.o \
                      $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TEST_DIR)/sub_unit_unittest.cpp -o $(BUILD_DIR)/sub_unit_unittest.o

$(BUILD_DIR)/map_unittest.o : $(TEST_DIR)/map_unittest.cpp \
                 $(BUILD_DIR)/map.o \
                 $(BUILD_DIR)/constants.o \
                 $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TEST_DIR)/map_unittest.cpp -o $(BUILD_DIR)/map_unittest.o

$(BUILD_DIR)/constants_unittest.o : $(TEST_DIR)/constants_unittest.cpp \
                       $(BUILD_DIR)/constants.o \
                       $(GTEST_HEADERS)
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(TEST_DIR)/constants_unittest.cpp -o $(BUILD_DIR)/constants_unittest.o


# Main

$(BUILD_DIR)/ridge.o : $(SRC_DIR)/ridge.cpp \
                       $(BUILD_DIR)/mvc.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -c $(SRC_DIR)/ridge.cpp -o $(BUILD_DIR)/ridge.o

OBJS = $(BUILD_DIR)/base_unit.o \
       $(BUILD_DIR)/base_tile.o \
       $(BUILD_DIR)/constants.o \
       $(BUILD_DIR)/map.o \
       $(BUILD_DIR)/cursor.o \
       $(BUILD_DIR)/sub_tile.o \
       $(BUILD_DIR)/utils.o \
       $(BUILD_DIR)/greaser_unit.o \
       $(BUILD_DIR)/squabbler_unit.o \
       $(BUILD_DIR)/bruiser_unit.o \
       $(BUILD_DIR)/game_state.o \
       $(BUILD_DIR)/init_error.o \
       $(BUILD_DIR)/sdl.o \
       $(BUILD_DIR)/window.o \
       $(BUILD_DIR)/controller.o \
       $(BUILD_DIR)/mvc.o \
       $(BUILD_DIR)/base_texture.o \
       $(BUILD_DIR)/texture_manager.o

$(BUILD_DIR)/base_unit_unittest : $(OBJS) $(BUILD_DIR)/base_unit_unittest.o $(BUILD_DIR)/gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ $(SDL_LINKER_FLAGS) -o $@

$(BUILD_DIR)/base_tile_unittest : $(OBJS) $(BUILD_DIR)/base_tile_unittest.o $(BUILD_DIR)/gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ $(SDL_LINKER_FLAGS) -o $@

$(BUILD_DIR)/sub_tile_unittest : $(OBJS) $(BUILD_DIR)/sub_tile_unittest.o $(BUILD_DIR)/gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ $(SDL_LINKER_FLAGS) -o $@

$(BUILD_DIR)/sub_unit_unittest : $(OBJS) $(BUILD_DIR)/sub_unit_unittest.o $(BUILD_DIR)/gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ $(SDL_LINKER_FLAGS) -o $@

$(BUILD_DIR)/constants_unittest : $(OBJS) $(BUILD_DIR)/constants_unittest.o $(BUILD_DIR)/gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ $(SDL_LINKER_FLAGS) -o $@

$(BUILD_DIR)/map_unittest : $(OBJS) $(BUILD_DIR)/map_unittest.o $(BUILD_DIR)/gtest_main.a
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ $(SDL_LINKER_FLAGS) -o $@

Ridge : $(OBJS) $(BUILD_DIR)/ridge.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -lpthread $^ $(SDL_LINKER_FLAGS) -o $@
